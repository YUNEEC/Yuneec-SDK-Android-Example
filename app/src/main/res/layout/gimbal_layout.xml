<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/set_yaw_hint"
            android:id="@+id/yaw_degree"
            android:background="@color/text"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:padding="5dp"
            android:textColor="@color/background"
            android:layout_gravity="center"/>

    <com.yuneec.example.view.CustomButton
        android:layout_width="wrap_content"
        android:id="@+id/rotate_camera_clockwise"
        style="@style/button"
        android:text="@string/set_yaw" />

    <com.yuneec.example.view.CustomButton
        android:id="@+id/rotate_camera_anticlockwise"
        style="@style/button"
        android:layout_width="wrap_content"
        android:text="@string/rotate_anticlockwise"
        android:visibility="gone"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/set_pitch_hint"
        android:id="@+id/pitch_degree"
        android:background="@color/text"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:padding="5dp"
        android:textColor="@color/background"
        android:layout_gravity="center"/>

    <com.yuneec.example.view.CustomButton
        android:layout_width="wrap_content"
        android:id="@+id/set_pitch"
        style="@style/button"
        android:text="@string/set_pitch" />

    <com.yuneec.example.view.CustomButton
        android:id="@+id/rotate_to_initial"
        style="@style/button"
        android:layout_width="wrap_content"
        android:text="@string/rotate_to_initial" />


</LinearLayout>